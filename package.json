    "chai": "4.3.7",
    "ffprobe-static": "3.1.0",
    "mocha": "10.2.0",
    "rimraf": "5.0.0",
    "rome": "12.0.0",
    "ts-node": "10.9.1",
    "typescript": "5.0.4"
