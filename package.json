{
  "name": "@dropb/ffprobe",
  "version": "2.0.0",
  "description": "ffprobe wrapper",
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "engines": {
    "node": ">=10.10.0"
  },
  "scripts": {
    "clean": "rimraf lib",
    "build": "npm run lint && npm run clean && npm run build:ts ",
    "test": "mocha",
    "test:watch": "mocha --watch",
    "prettier": "prettier --write \"**/*.{json,md,ts}\"",
    "build:ts": "tsc",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "postversion": "npm run build && git push --follow-tags"
  },
  "author": "kukhariev",
  "repository": {
    "type": "git",
    "url": "https://github.com/kukhariev/ffprobe.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "4.2.15",
    "@types/ffprobe-static": "2.0.0",
    "@types/mocha": "8.2.1",
    "@types/node": "10.17.54",
    "chai": "4.3.0",
    "ffprobe-static": "3.0.0",
    "mocha": "8.3.0",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "ts-node": "9.1.1",
    "tslint": "6.1.3",
    "tslint-config-prettier": "1.18.0",
    "typescript": "4.2.2"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": "test/**/*.spec.ts",
    "require": "ts-node/register"
  }
