{
  "name": "@dropb/ffprobe",
  "keywords": ["ffprobe", "media", "video", "audio", "stream"],
  "version": "2.0.1",
  "description": "ffprobe wrapper",
  "files": ["lib"],
  "main": "./lib/index.js",
  "module": "./lib/index.mjs",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "require": "./lib/index.js",
      "import": "./lib/index.mjs",
      "types": "./lib/index.d.ts"
    }
  },
  "engines": {
    "node": ">=14.17.0"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean --out-dir lib",
    "build:watch": "npm run build -- --watch src",
    "test": "mocha",
    "test:watch": "mocha --watch",
    "lint": "rome check src test",
    "format": "rome format --write src test",
    "postversion": "npm run build && git push --follow-tags"
  },
  "author": "kukhariev",
  "repository": {
    "type": "git",
    "url": "https://github.com/kukhariev/ffprobe.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "4.3.5",
    "@types/ffprobe-static": "2.0.1",
    "@types/mocha": "10.0.1",
    "@types/node": "18.16.3",
    "chai": "4.3.7",
    "ffprobe-static": "3.1.0",
    "mocha": "10.2.0",
    "rome": "12.0.0",
    "ts-node": "10.9.1",
    "tsup": "^6.7.0",
    "typescript": "5.0.4"
  },
  "mocha": {
    "extension": ["ts"],
    "spec": "test/**/*.spec.ts",
    "require": "ts-node/register"
  }
}
